<%= form_tag root_path, :method => 'POST' do %>
    <%= text_field_tag 'id', nil, placeholder: 'Enter Company Ticker Symbol', size: 50 %>
    <%= submit_tag 'Lookup Stock Quote' %>
<% end %>

<br><br/>

<% if @stock %> 
<div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><strong><%= @stock.name %> - <%= @stock.symbol %></strong> </h3>
    </div>
    
    <div class="panel-body">
        
        <div class="col-md-4">
            <h1>$<%= @stock.l %></h1> <br/>
      
              <strong>Earnings Per Share: </strong><%= @stock.eps %> <br/>
              <strong>Price/Earning Ratio: </strong><%= @stock.pe %> <br/>
              <strong>Market Cap: </strong><%= @stock.mc %> <br/>
              <strong>Stock Open: </strong><%= @stock.op %> <br/>
              <strong>Day's Range </strong><%= @stock.lo %> - <%= @stock.hi %><br/>
              <strong>Year High: </strong><%= @stock.hi52 %> <br/>
              <strong>Year Low: </strong><%= @stock.lo52 %> <br/>
        </div>
        <div class="col-md-8"></br>
          <p align = "justify"><%= @stock.summary[0]["overview"] %></p>
        </div>
    </div>
</div>

<% end %>
    

<% if @error %>
    <%= @error %>
<% end %>
    


